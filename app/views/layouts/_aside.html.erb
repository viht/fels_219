<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <% if logged_in? %>
        <div class="pull-left image">
          <%= image_tag current_user.avatar.url, class: "user-image" %>
        </div>
        <div class="pull-left info">
          <p><%= link_to current_user.name, current_user %></p>
          <a><i class="fa fa-circle text-success"></i><%= t "online" %></a>
        </div>
      <% end %>
    </div>

    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder= <%= t "search" %> >
          <span class="input-group-btn">
            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
              <i class="fa fa-search"></i>
            </button>
          </span>
      </div>
    </form>

    <ul class="sidebar-menu">
      <li class="header"> <%= t "main" %> </li>
      <li class="treeview">
        <%= link_to root_path do %>
          <i class="fa fa-home"></i>
          <span><%= t "home" %></span>
        <% end %>
      </li>
      <li class="treeview">
        <%= link_to categories_path do %>
          <i class="fa fa-files-o"></i>
          <span><%= t "category" %></span>
        <% end %>
      </li>

      <li>
        <%= link_to words_path do %>
          <i class="fa fa-th"></i>
          <span><%= t "words_list" %></span>
        <% end %>
      </li>
      <li class="treeview">
        <%= link_to users_path do %>
          <i class="fa fa-edit"></i>
          <span><%= t "users" %></span>
        <% end %>
      </li>
    </ul>
  </section>
</aside>
