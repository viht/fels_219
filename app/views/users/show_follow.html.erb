    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
</div>
<div class="row">
  <h3><%= @title %></h3>
  <% if @users.any? %>
    <ul class="users follow">
      <%= render @users %>
    </ul>
  <% end %>
</div>
