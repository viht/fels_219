<% provide :title, @user.name %>
<div class="row">
  <div class="center jumbotron col-sm-4">
    <section class="user_info">
      <p>
        <em><%= image_tag current_user.avatar.url %></em><br>
        <strong><%= @user.name %></strong><br>
        <code><%= @user.email %></code>
      </p><br>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    </div>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
</div>
